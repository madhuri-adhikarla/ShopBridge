
@model ShopBridge.Models.ItemDetail

@{
    ViewBag.Title = "Details";
}
<style>
    .itemDetails {
        padding: 10px;
        border-radius: 5px;
    }

    .details > div > label {
        color: #c94c4c;
        font-size: 14px;
        font-weight: 600;
    }

   
</style>

<h3 style="color: cornflowerblue">@Model.Name</h3>

<div>
    <hr />
    <div class="row table-bordered itemDetails">

        <div class="col-lg-12 details">
            <div class="col-sm-3">
                @Html.LabelFor(model => model.Name)
            </div>
            <div class="col-sm-3">
                @Html.DisplayFor(model => model.Name)
            </div>

        </div>

        <div class="col-lg-12 details">
            <div class="col-sm-3">
                @Html.LabelFor(model => model.Description)
            </div>
            <div class="col-sm-9">
                @Html.DisplayFor(model => model.Description)
            </div>

        </div>

        <div class="col-lg-12 details">
            <div class="col-sm-3">
                @Html.LabelFor(model => model.Price)
            </div>
            <div class="col-sm-3">
                <b>$ @Html.DisplayFor(model => model.Price)  </b>
            </div>
        </div>
        <div class="col-lg-12 details">
            <div class="col-sm-3">
            </div>
            <div class="col-sm-3">
                <img src="/ItemDetails/RetrieveImage/@Model.ItemId" alt="" height=100 width=200 />
            </div>
        </div>
        

    </div>
</div>
<div class="itemDetails">
    @*@Html.ActionLink("Edit", "Edit", new { id = Model.ItemId }) |*@
    @*@Html.ActionLink("Back to List", "Index")*@
    <a href="@Url.Action("Index", "ItemDetails")">Back to Inventory<img src="~/Content/Images/backIcon.jpg" style=" width: 23px; margin : 10px; " /></a>
</div>
